<h1><%= @post.title %></h1>

<p>
  <%= @post.body %>
</p>

<p>
  Tags:
  <% @post.tags.each do |tag| %>
    <%= tag.title %>
  <% end %>
</p>

<h3>
  Comments
</h3>

<%= form_for [@post, @comment], remote: true do |f| %>
  <%= f.label :user %>
  <%= f.text_field :user, :autofocus => true %><br>
  <%= f.label :body %>
  <%= f.text_area :body %><br>
  <%= f.submit %>
<% end %>

<ul>
  <section id='comments-section'>
    <% @post.comments.reverse.each do |comment| %>
      <%= render comment %>
    <% end %>
  </section
</ul>
